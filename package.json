{
  "name": "taga",
  "description": "JS Library for all things related to table games including game engines, bots, components for React (+Native), and more",
  "author": {
    "name": "Dan Lindsey",
    "email": "dev@mdlindsey.com"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "jest --clearCache && jest --verbose --coverage",
    "test:update": "npm test -- -u",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "tslint --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdlindsey/taga.git"
  },
  "keywords": [
    "cards",
    "chips",
    "casino",
    "poker",
    "blackjack",
    "spades",
    "hearts"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdlindsey/taga/issues"
  },
  "homepage": "https://github.com/mdlindsey/taga#readme",
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/preset-typescript": "^3.0.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.0.0",
    "babel-loader": "^8.1.0",
    "jest": "^25.5.2",
    "lerna": "^3.20.2",
    "storybook": "^5.3.18",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3"
  }
